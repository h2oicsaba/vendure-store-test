# Application
APP_ENV=production
PORT=3000
NODE_ENV=production

# Security
COOKIE_SECRET=your-secure-cookie-secret
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=change-this-password

# Database (will be provided by Railway)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=railway
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public

# Frontend URL (update with your production URL)
VENDURE_SHOP_API_URL=https://your-domain.com/shop-api
VENDURE_ADMIN_API_URL=https://your-domain.com/admin-api

# Email (configure based on your email provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=no-reply@yourdomain.com

# Storage (configure as needed)
ASSET_UPLOAD_DIR=./static/assets
ASSET_UPLOAD_MAX_FILE_SIZE=20971520
